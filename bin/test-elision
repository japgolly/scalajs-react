#!/bin/bash
cd "$(dirname "$0")/.." || exit 1

case $# in
  1)
    set -euo pipefail
    terms=(
      COMP_NAMES_ARE_ELIDABLE
      DEVONLY
      ELIDABLE_AUTO_COMPONENT_NAME
      ELIDABLE_VDOM_ATTR
      REUSABILITY_OVERRIDE_TEST
    )
    for t in "${terms[@]}"; do
      "$0" "$1" "$t"
    done
    exit 0
    ;;
  2)
    ;;
  *)
    echo "USAGE: $(basename "$0") <scala-version> [<term>]"
    exit 1
    ;;
esac

set -uo pipefail

# echo '+ ;test/test:fastOptJS; test/test:fullOptJS'
# echo

scalaVersion=${1:0:4}
term="$2"
fast=test/target/scala-$scalaVersion/test-test-fastopt/main.js
full=test/target/scala-$scalaVersion/test-test-opt/main.js
grep="fgrep --color=always $term"

failFast=
testFast() {
  if [ -z "$($grep $fast)" ]; then
    echo "missing from fastOptJS."
    failFast=1
  fi
}

failFull=
testFull() {
  out="$($grep $full)"
  if [ -n "$out" ]; then
    echo "found in fullOptJS."
    echo
    echo "$out"
    echo
    failFull=1
  fi
}

echo -n "Testing for $term ... "
testFast
testFull
[ -n "${failFast}${failFull}" ] && echo "Failed." && exit 1
echo "passed."
